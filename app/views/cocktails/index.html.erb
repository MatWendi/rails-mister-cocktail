

<%=render "components/banner" %>

<div class="wrapper">
  <div class="container">
    <div class="cards">
      <div class="row">
        <% @cocktails.each do |cocktail| %>

            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1531002329786-97e3efcb754b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=5cc826864e1890cc916a71b4de444385&auto=format&fit=crop&w=1050&q=80');">
                <div class="card-category"><%= cocktail.ingredients.first.name.capitalize%> Flavor</div>
                <div class="card-description">
                  <h2><%= link_to cocktail.name.capitalize, cocktail_path(cocktail.id), class:"link_to" %></h2>
                </div>

                <%= link_to '', cocktail_path(cocktail.id), class:"card-link" %>
              </div>
            </div>

        <% end %>
      </div>
    </div>
  </div>
 </div>
