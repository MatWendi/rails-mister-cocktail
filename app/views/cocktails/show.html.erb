
<div class="wrapper">
  <div class="container" id="container-show">
    <h1>  <%= @cocktail.name %> </h1>
    <div class="modif">
      <%= link_to 'Edit', edit_cocktail_path, class:"link_to" %>
      <%= link_to 'Delete', cocktail_path, method: :delete, class:"link_to"%>
    </div>

    <div id="bas_de_page">
      <div class="postit_ingredient">
        <h2>
          Ingredients
          <%= link_to new_cocktail_dose_path(@cocktail.id), class:"link_to" do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </h2>
        <p>
          <ul>
            <%@doses.each do |dose|%>
              <li>
                <%= dose.description  %>
                <%= dose.ingredient.name.capitalize  %>
                <%= link_to edit_cocktail_dose_path(dose.id), class:"link_to" do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
        </p>
      </div>

      <div id="imag_show">
        <!-- <img src="https://images.unsplash.com/photo-1461823385004-d7660947a7c0?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=82c2b0959f392571810e512b4a73d625&auto=format&fit=crop&w=1350&q=80"> -->
      </div>

     </div>
  </div>
</div>
